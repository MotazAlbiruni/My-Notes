<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ReadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_background"
        android:orientation="vertical"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:orientation="horizontal"
            android:weightSum="4">

            <EditText
                android:id="@+id/txtTitle_Read"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="2.5"
                android:background="@drawable/edit_text_border_blue"
                android:enabled="false"
                android:gravity="center_vertical"
                android:hint="@string/hint_title"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:padding="16dp"
                android:singleLine="true"
                android:textColor="@color/colorTextWhite"
                android:textColorHint="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="Autofill,NestedWeights" />

            <Spinner
                android:id="@+id/spinner_important"
                style="@style/spinnerStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@color/gray_background" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_body"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:orientation="vertical">


            <EditText
                android:id="@+id/txtNote_Read"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/edit_text_border_blue"
                android:enabled="false"
                android:gravity="start|top"
                android:hint="@string/hint_body"
                android:imeOptions="actionDone"
                android:inputType="textMultiLine"
                android:padding="16dp"
                android:textColor="@color/colorTextWhite"
                android:textColorHint="@android:color/white"
                android:textSize="24sp"
                tools:ignore="Autofill" />
        </LinearLayout>
    </LinearLayout>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView_mainActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-9560026096293120/6944073292">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>